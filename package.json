{
	"name": "authentication-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"description": "A complete authentication system built with SvelteKit, Auth.js, Drizzle ORM, and Tailwind CSS. This application provides email/password authentication, role-based access control, user management, and profile settings.",
	"main": "migrate-pg.js",
	"scripts": {
	  "dev": "vite dev",
	  "build": "vite build",
	  "preview": "vite preview",
	  "prepare": "svelte-kit sync || echo ''",
	  "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
	  "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
	  "db:generate": "drizzle-kit generate:pg",
	  "db:migrate": "node --loader ts-node/esm src/lib/server/db/migrate.ts",
	  "db:push": "drizzle-kit push"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
	  "@sveltejs/adapter-auto": "^6.0.0",
	  "@sveltejs/kit": "^2.22.0",
	  "@sveltejs/vite-plugin-svelte": "^6.0.0",
	  "@types/bcrypt": "^6.0.0",
	  "@types/pg": "^8.15.5",
	  "autoprefixer": "^10.4.21",
	  "dotenv": "^17.2.1",
	  "drizzle-kit": "^0.31.4",
	  "postcss": "^8.5.6",
	  "postgres": "^3.4.7",
	  "svelte": "^5.0.0",
	  "svelte-check": "^4.0.0",
	  "tailwindcss": "^3.4.17",
	  "ts-node": "^10.9.2",
	  "typescript": "^5.0.0",
	  "vite": "^7.0.4"
	},
	"dependencies": {
	  "@auth/core": "^0.40.0",
	  "@auth/drizzle-adapter": "^1.10.0",
	  "@auth/sveltekit": "^1.10.0",
	  "@kitql/all-in": "^0.9.6",
	  "@types/nodemailer": "^6.4.17",
	  "@google/generative-ai": "^0.21.0",
	  "bcrypt": "^5.1.1",
	  "bcryptjs": "^3.0.2",
	  "better-sqlite3": "^12.2.0",
	  "drizzle-orm": "^0.44.4",
	  "nodemailer": "^6.10.1",
	  "pg": "^8.16.3",
	  "uuid": "^9.0.1"
	}
  }
  